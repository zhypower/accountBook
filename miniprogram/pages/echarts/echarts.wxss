Page{
  position: relative;
  background: #c5d5ff;
  
}
.canvas {
  position: absolute;
  left: 8%;
  top: 50px;
  width: 100vw;
  height: 550px;
  margin: 0 auto;
}
.container{
  height: 350px;
  width: 320px;
  background: white;
  border-radius: 10px;
  margin: 40px auto;
}
.bot{
	width: 100%;
	height: 50px;
	position: fixed;
	bottom: 0;
	margin-top: 50px;
  z-index: 2;

}
.btn{
  
	background: #6450cb;
	color: white;
	text-align: center;
	width: 150px;
	border-radius: 10px;
	margin: 0 auto;
	height: 40px;
	line-height: 40px;
	box-shadow: rgba(0,108,255,0.5) 0px 0px 10px;
}